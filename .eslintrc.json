{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-undef":"off",
        "no-console":"off",
        "no-plusplus":"off",
        "no-unused-vars": "warn",
        "eol-last":"warn",
        "max-len": ["warn", 100],
        "quotes": ["warn", "single"],
        "semi": [2, "always"],
        "padding-line-between-statements": [
            "warn",
            {
                "blankLine": "always",
                "prev": "block-like",
                "next": "block-like"
            }
        ],
        "no-var": "error",
        "prefer-template": "warn",
        "indent": ["off", "tab"]
    }
}
